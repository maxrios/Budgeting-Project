<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Scene fill="#23369e" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.ClientInfoController">
    <AnchorPane minHeight="100.0" minWidth="300.0" prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: #de9a2c;">
      <children>
         <HBox minHeight="100.0" minWidth="300.0" prefHeight="100.0" prefWidth="300.0">
            <children>
               <VBox prefHeight="100.0" prefWidth="225.0">
                  <children>
                     <HBox prefHeight="25.0" prefWidth="225.0">
                        <children>
                           <TextField fx:id="firstNameTextField" promptText="First Name">
                              <HBox.margin>
                                 <Insets right="1.0" />
                              </HBox.margin>
                           </TextField>
                           <TextField fx:id="lastNameTextField" promptText="Last Name">
                              <HBox.margin>
                                 <Insets left="1.0" />
                              </HBox.margin>
                           </TextField>
                        </children>
                        <VBox.margin>
                           <Insets left="5.0" right="5.0" top="15.0" />
                        </VBox.margin>
                     </HBox>
                     <PasswordField fx:id="passwordField" promptText="Password">
                        <VBox.margin>
                           <Insets left="5.0" right="5.0" top="20.0" />
                        </VBox.margin>
                     </PasswordField>
                  </children>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
               </VBox>
               <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connectButtonAction" prefHeight="100.0" prefWidth="75.0" style="-fx-shadow-highlight-color: transparent;" text="Connect">
                  <HBox.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
      </children></AnchorPane>
</Scene>
